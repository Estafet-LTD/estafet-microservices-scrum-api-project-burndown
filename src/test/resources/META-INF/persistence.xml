<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="build" transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>com.estafet.microservices.api.project.burndown.entity.Project</class>
		<class>com.estafet.microservices.api.project.burndown.entity.Sprint</class>
		<exclude-unlisted-classes />

		<properties>

			<property name="javax.persistence.schema-generation.database.action"
				value="drop-and-create" />
			<property name="javax.persistence.schema-generation.scripts.action"
				value="drop-and-create" />
			<property name="javax.persistence.schema-generation.scripts.create-target"
				value="create-project-burndown-db.ddl" />
			<property name="javax.persistence.schema-generation.scripts.drop-target"
				value="drop-project-burndown-db.ddl" />

			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/project-burndown" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="welcome1" />
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="validate" />

		</properties>

	</persistence-unit>

</persistence>